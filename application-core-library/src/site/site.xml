<project name="MessageVortex application-core-library">

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>

    <bannerLeft>
        <name>MessageVortex</name>
        <src>https://messagevortex.net/images/MessageVortexLogo.png</src>
        <href>https://messagevortex.net/</href>
    </bannerLeft>

    <publishDate position="right"/>

    <custom>
        <reflowSkin>
            <theme>bootswatch-spruce</theme>
            <highlightJs>true</highlightJs>

            <brand>
                <name>MessageVortex</name>
                <href>https://messagevortex.net</href>
            </brand>
            <slogan>Anonymity taken to the next level</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>top</toc>
            <topNav>Download|reports</topNav>
            <bottomNav>
                <column>Main|Download</column>
                <column>Documentation</column>
                <column>reports|modules</column>
            </bottomNav>
            <bottomDescription>
                This is a very good project doing interesting and valuable things.
            </bottomDescription>
            <pages>
                <index project="project-id">
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>false</breadcrumbs>
                    <toc>false</toc>
                    <sections>
                        <carousel />
                        <body />
                        <sidebar />
                        <thumbs>2</thumbs>
                        <columns>3</columns>
                    </sections>
                </index>
                <developer-info>
                    <toc>sidebar</toc>
                </developer-info>
            </pages>
        </reflowSkin>
    </custom>

</project>
